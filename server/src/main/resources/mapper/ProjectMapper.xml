<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bingo.server.mapper.ProjectMapper">
    <resultMap id="selectprojectRM" type="project">
        <id property="smId" column="smId"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="price" column="price"/>
        <collection property="itemList" ofType="item"
                    select="com.bingo.server.mapper.ProjectItemMapper.getItemsByProjectId"
                    column="smId"/>
    </resultMap>

    <select id="getProjectsByType" resultMap="selectprojectRM">
        select * from setmeal where type=#{type} order by smId
    </select>
</mapper>