<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bingo.server.mapper.OrderMapper">
    <resultMap id="orderRM" type="order">
        <id property="orderId" column="orderId"/>
        <result property="orderDate" column="orderDate"/>
        <result property="userId" column="userId"/>
        <result property="hpId" column="hpId"/>
        <result property="smId" column="smId"/>
        <result property="state" column="state"/>
        <association property="hospital" column="hpId" javaType="hospital"
                     select="com.bingo.server.mapper.HospitalMapper.getHospitalById"/>
        <association property="project" column="smId" javaType="project"
                     select="com.bingo.server.mapper.ProjectMapper.getProjectById"/>
    </resultMap>

    <select id="listOrdersNumber" parameterType="OrderMapperDto"
            resultType="CalendarResponseDto">
        <foreach collection="list" item="dto" separator="union">
            select #{dto.date} Date,count(*) Exist from orders
            where orderDate=#{dto.date} and hpId=#{dto.hpId}
        </foreach>
    </select>

    <select id="listOrdersByUserId" parameterType="order" resultMap="orderRM">
        select * from orders where userId=#{userId} and state=#{state}
        order by orderId desc
    </select>
</mapper>